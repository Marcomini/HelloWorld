package br.modelo.jdbc;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import br.modelo.jdbc.Cd;

public class Alterar {
	public static void alterando (Cd testecd){

		Connection con = Conexao.receberConexao();
		String sql = "Update tabelacd set nomedocd = ?,genero= ?, artista= ? where codigo = ?";

		try {
			PreparedStatement preparador = con.prepareStatement(sql);
			preparador.setString(1, testecd.getNomedocd());
			preparador.setString(2, testecd.getGenero());
			preparador.setString(3, testecd.getArtista());
			preparador.setInt(4, testecd.getCodigo());

			preparador.execute();
			preparador.close();

			System.out.println("Alterado com sucesso");
		}

		catch (SQLException e) {

			e.printStackTrace();
			System.err.println("NÃ£o alterado");
		}
	}
}

	


